@import "../../widgets/modules/modules.acss";page {
  height : 100%;
  width : 100%;
  font-size : 28rpx;
}
.head {
  top : 0;
  left : 0;
  height : 140rpx;
  width : 100%;
  background-color: #ccc;
  display : flex;
  position: fixed;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
}
.head .shop-info {
  color : #fff;
  position: relative;
  z-index: 10;
  margin-left: 20rpx;
  display: flex;
}
.head .shop-info .logo {
  width : 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.head .shop-info .info {
  margin-left : 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.head .shop-info .info .name {
  font-size: 32rpx;
}
.head .shop-info .info .sub {
  font-size : 24rpx;
  display: flex;
}
.head .shop-info .info .sub image {
  width : 32rpx;
  height : 32rpx;
  margin-right: 6rpx;
}
.head .act {
  position: relative;
  z-index: 10;
  color : #fff;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}
.head .act .star {
  font-size : 24rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.head .act .star .num {
  font-size : 28rpx;
}
.head .act .follow {
  height : 44rpx;
  position: relative;
  justify-content: center;
  align-items: center;
  padding-left : 40rpx;
  padding-right : 20rpx;
  border-radius: 21rpx;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  background-color: #df393c;
  font-size : 20rpx;
}
.head .act .follow.followed {
  background-color: #2c2c2c;
}
.head .act .follow image {
  width : 24rpx;
  height: 24rpx;
  position: absolute;
  left : 10rpx;
  margin-right : 0rpx;
}
.head .back-pic {
  width: 100%;
  height: 100%;
  position: absolute;
  left : 0;
  top : 0;
  z-index: 1;
}
.head .back-pic::before {
  content : '';
  display: block;
  width: 100%;
  height : 100%;
  position: absolute;
  left: 0;
  top: 0;
  background-color: #000;
  z-index: 2;
  opacity: 0.3;
}
.nav {
  border-bottom : solid 1px #f0f0f0;
  height : 80rpx;
  display: flex;
  width : 100%;
  position: fixed;
  width : 100%;
  left : 0rpx;
  top : 140rpx;
  background-color: #fff;
  z-index: 100;
}
.nav .tab {
  flex-grow: 1;
  height : 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color : #ccc;
}
.nav .tab.current {
  color : #404040;
}
.nav .line {
  position: absolute;
  left : 0;
  bottom : 0;
  height : 6rpx;
  transition: all 0.3s ease;
  background-color: #df393c;
}
.cont {
  height : 100%;
}
.block {
  height : 220rpx;
  width : 100%;
}