<view class="page-pointToMoney">
	<view class="your-point" a:if="{{userInfo}}">
		<text>积分总额</text> 
		<text class="value">{{userInfo.userPoint}}</text>
	</view>
	<view class="point-input">
		<text>请输入您要兑换的积分</text>
		<input class="input-box" type="number" data-key="point" onInput="changeinput"/>
	</view>

	<view class="submit" catchTap="toMoney">兑换</view>
</view>