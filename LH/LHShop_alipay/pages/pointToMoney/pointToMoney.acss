.page-pointToMoney {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  /*justify-content:center;*/
  align-items: center;
}
.page-pointToMoney .your-point {
  margin-top: 100rpx;
  font-size: 50rpx;
}
.page-pointToMoney .your-point .value {
  color: #CC3333;
}
.page-pointToMoney .input-box {
  height: 100rpx;
  border: 1px solid #f0f0f0;
  border-radius: 10rpx;
  margin-top: 100rpx;
}
.page-pointToMoney .submit {
  width: 300rpx;
  height: 100rpx;
  color: white;
  border-radius: 10rpx;
  text-align: center;
  background-color: #CC3333;
  line-height: 100rpx;
  margin-top: 100rpx;
}