@import "../../widgets/modules/modules.acss";.home {
  padding-top: 100rpx;
  color : #4a4a4a;
}
.home .h-head {
  background-color: #fff;
  z-index: 100;
  border-bottom : solid 1px #f9f9f9;
  position: fixed;
  top : 0;
  left : 0;
  width: 714rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding : 0 20rpx;
  z-index : 10010;
}
.home .h-head .searchbox {
  width : 100rpx;
  flex-grow: 1;
  margin : 0 20rpx;
  display: flex;
  align-items: center;
}
.home .h-head .searchbox .input {
  border-radius: 30rpx;
  height : 60rpx;
  flex-grow: 1;
  padding : 0 20rpx;
  background-color: #eee;
  color : #aaa;
  display: flex;
  align-items: center;
}
.home .h-head .searchbox .input image {
  width: 32rpx;
  height : 32rpx;
  margin-right : 20rpx;
}
.home .h-head .city {
  height : 60rpx;
  width : 90rpx;
  padding-left: 48rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.home .h-head .city image {
  width : 48rpx;
  height : 48rpx;
  position: absolute;
  left : 0;
}
.home .h-head .shops {
  height: 60rpx;
  display: flex;
  align-items: center;
}
.home .h-head .shops image {
  width : 52rpx;
  height: 48rpx;
}
.home .mask {
  transition : opacity 0.3s ease;
  z-index: 1000;
  position: fixed;
  top : 0;
  left: 0;
  width : 0;
  height : 0;
  background-color: #000;
  opacity: 0;
}
.home .mask.show {
  opacity: 0.4;
  width : 100%;
  height : 100%;
}
.home .shop-list {
  transition : all 0.3s ease;
  transform: translate3d( 0, -100%, 0 );
  border-top : solid 1px #f0f0f0;
  padding : 20rpx 0;
  z-index: 1001;
  left : 0;
  position: fixed;
  top : 100rpx;
  background-color: #fcfcfc;
  width : 100%;
}
.home .shop-list.show {
  transform: translate3d( 0, 0, 0 );
}
.home .shop-list scroll-view {
  width: 100%;
}
.home .shop-list .scroll-wrapper {
  position: relative;
  z-index: 1000000;
  display: flex;
}
.home .shop-list .tab {
  position: relative;
  overflow: hidden;
  display: inline-block;
  text-align: center;
  color : #000;
  width : 140rpx;
  margin : 0 20rpx;
  padding : 20rpx 0;
}
.home .shop-list .tab image {
  width : 100rpx;
  height: 80rpx;
}
.home .shop-list .tab .name {
  margin-top : 20rpx;
  font-size : 28rpx;
}
/* 没服务情况  */
.home.goLogin-wrapper {
  position: fixed;
  height: 100%;
  top: 0;
  left : 0;
  width : 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.home.goLogin-wrapper .login-logo {
  width: 150rpx;
  height: 160rpx;
  margin-bottom: 140rpx;
}
.home.goLogin-wrapper .login-msg {
  font-size: 16px;
  color: #999999;
  margin-bottom: 112rpx;
}
.home.goLogin-wrapper .login-btn {
  font-size: 17px;
  color: #FFFFFF;
  background: #d6204b;
  box-shadow: 0 5px 10px 0 rgba(0,0,0,0.20);
  border-radius: 80px;
  width: 320rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 200rpx;
}