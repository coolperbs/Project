<template name="category">
<view class="category">
	<view class="searchbox">
		<image src="../../asset/search-gray.png" />
		<navigator url="../search/search" class="input">请输入搜索内容</navigator>
	</view>
	<scroll-view class="menu" scroll-y="{{true}}">
		<view class="item ellipsis-1 {{ currentTab.catId == item.catId ? 'current' : '' }}" s-for="item, index in cat" s-key="index" catchtap="categoryClickProxy" data-fn="changeTab" data-id="{{item.catId}}">{{item.catName}}</view>
	</scroll-view>
	<scroll-view scroll-y="{true}" class="c-cont">
		<block s-for="level2, index in  currentTab.childCategories " s-key="catId">
		<view class="title">{{level2.catName}}</view>
		<view class="c-list">
			<navigator url="../search/search?catid={{level3.catId}}" class="cell" s-for="level3, index in level2.childCategories" s-key="catId">
				<image src="{{level3.logo}}"></image>
				{{level3.catName}}
			</navigator>
		</view>
		</block>
	</scroll-view>
</view>	
</template>