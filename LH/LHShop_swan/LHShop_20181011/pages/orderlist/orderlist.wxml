								data-orderId="{{orderId}}" 
								data-param="{{eventParam}}"
								class="btn finished comment" 
								catchtap="toAftersale"> 
								申请售后
								</view> -->
							</view>



	 		
				
						</view>
				</view>
			</view>
		<!-- </scroll-view> -->
	</view>
</template>




