	color:#9B9B9B;
	letter-spacing:0;
	background:#FFFFFF;
	border:2rpx solid #F5F5F5;
	border-radius:200rpx;
	width:128rpx;
	height:64rpx;
	line-height:64rpx;
	text-align:center;
}
.page-aftersalelist .gooditem .body .right .refoundStatus{
	position:absolute;
	bottom:15rpx;
	right:0;
	font-family:PingFangSC-Regular;
	font-size:26rpx;
	letter-spacing:0;
	background:#FFFFFF;
	width:150rpx;
	text-align:center;
}
.page-aftersalelist .gooditem .body .right .refoundStatus-3{
	color:#e9c274;
}
