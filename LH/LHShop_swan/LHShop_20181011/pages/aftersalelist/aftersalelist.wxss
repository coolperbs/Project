
.page-aftersalelist{
	/*background-color: red;*/
}


.page-aftersalelist .head { z-index:100;border-bottom: solid 2rpx #f0f0f0; background-color: #fff; position: fixed; top : 0; left : 0; width : 100%; display: flex; align-items: center; justify-content: space-around; }
.page-aftersalelist .head .box { text-align:center;height : 100rpx; line-height: 100rpx; padding : 0 20rpx; font-size : 28rpx; }
.page-aftersalelist .head .box.current { color : #d6204b;  }
.tab_ul{
	position:absolute;
	height:6rpx;
	background-color:#d6204b;
	left:0;
	bottom:0;
	width:90rpx;
	transition: all .3s;

}


.page-aftersalelist .tab{
	display:flex;
	height:100rpx;
	align-items:center;
	position: fixed;
	top:0;
	background-color: #fff;
	width:100%;
	z-index: 100
}
.page-aftersalelist .tab .tab-item{
	display:flex;
	height:100rpx;
	align-items:center;
	border-bottom:2rpx solid #f8f8f8;
	width:25%;
	text-align:center;
	justify-content:center;
	flex-direction:column;
	color:#434552;
}
.page-aftersalelist .tab .tab-item .content{
	display:flex;
	height:100%;
	align-items:center;
	text-align:center;
	justify-content:center;
	flex-direction:column;
	color:#999999;
	width:100rpx;
	position: relative;
}
.page-aftersalelist .tab .tab-item.active .content{
	color:#434552;
}
.page-aftersalelist .tab .tab-item .tab-title{
	font-size: 26rpx;
	margin-bottom: 17rpx;
}
.page-aftersalelist .tab .tab-item .tab-num{
	font-size: 24rpx
}
.page-aftersalelist .tab .tab-item.active .content:after{
	content:'';
	height: 6rpx;
	width:100%;
	background-color: #434552; 
	position: absolute;
	bottom: 0;
}
.page-aftersalelist .list-container{
	margin-top:100rpx;
	padding-bottom:50rpx;
}
.page-aftersalelist .comment-wrapper{
	/*height:210rpx;*/
	border-bottom:1px solid #f8f8f8;
	display:flex;
	padding:40rpx 40rpx 6rpx 40rpx;
}

.page-aftersalelist .left image{
	height:100rpx;
	width:100rpx;
	border-radius: 50%
}
.page-aftersalelist .body .right{
	display:flex;
	justify-content:space-between;
	width:540rpx;
	font-size: 30rpx;
	padding-left:18rpx;
	position: relative;

}
.page-aftersalelist .right .top{}
.page-aftersalelist .right .bottom{}
.page-aftersalelist .right .name{
	font-size: 32rpx;
	color: #434552;
	letter-spacing: 0;
	/*padding-bottom: 15rpx;*/
	line-height: 32rpx;
	height: 64rpx;
}
.page-aftersalelist .right .time{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #CCCCCC;
	letter-spacing: 0;
}
.page-aftersalelist .right .content{}
.page-aftersalelist .starts{
	display:flex;
	/*justify-content:space-between;*/
	margin-bottom: 12rpx;
	line-height: 30rpx


}
.page-aftersalelist .starts image{
	width:30rpx;
	height:30rpx;
	margin-right:12rpx;

}
.page-aftersalelist .tickets{
	/*position:absolute;*/
	display:flex;
	flex-wrap:wrap;
	min-height: 72rpx
}
.page-aftersalelist .ticket{
	font-family:PingFangSC-Light;
	font-size:22rpx;
	color:#4A4A4A;
	letter-spacing:0;
	line-height:24rpx;
	background:#F5F5F5;
	border-radius:200rpx;
	padding:0 30rpx;
	margin-right:20rpx;
	margin-bottom:20rpx;
	height:44rpx;
	display:flex;
	justify-content:center;
	align-items:center;
}
.page-aftersalelist .time-wrapper{
	position: absolute;
	right: 0;
}
.page-aftersalelist .content{
	width:550rpx;
	color:#bababa;
	font-size:26rpx;

}



.page-aftersalelist .gooditem{
	

	background:#FFFFFF;
	box-shadow:0 10rpx 30rpx 0 rgba(0,0,0,0.05);
	margin:30rpx;
	/*border-bottom:1px solid #f8f8f8;*/
}.page-aftersalelist .gooditem .header{
	display: flex;
	justify-content: space-between;
}
.page-aftersalelist .gooditem .header .left{
	display:flex;
	justify-content:flex-start;
	padding-left:20rpx;
	flex-direction:column;
	border-bottom:2rpx solid #fafafa;
	color:#bababa;
	font-size:26rpx;
	width:300rpx;
}
.page-aftersalelist .gooditem .header .right{
	display:flex;
	justify-content:flex-end;
	padding-left:20rpx;
	/*flex-direction:column;*/
	border-bottom:2rpx solid #fafafa;
	color:#bababa;
	font-size:26rpx;
	width:300rpx;
	padding-right: 20rpx;

}
.page-aftersalelist .gooditem .body{
	display:flex;
	height:180rpx;
	padding:20rpx 28rpx 20rpx 20rpx;
	background-color:white;
}
.page-aftersalelist .gooditem .body .left{
	width:180rpx;
	height:180rpx;
}
.page-aftersalelist .gooditem .body .left image{
	width:100%;
	height:100%;
}
.page-aftersalelist .gooditem .body .right{
	display:flex;
	flex-direction:column;
	position:relative;
	width:460rpx;
	justify-content:space-between;
	padding:20rpx 0 20rpx 10rpx;
}
.page-aftersalelist .gooditem .body .right .name{
	font-size:28rpx;
	color:#4A4A4A;
	letter-spacing:0;
}
.page-aftersalelist .gooditem .body .right .num{
	font-size:36rpx;
	color:#4A4A4A;
	letter-spacing:0;
}
.page-aftersalelist .gooditem .body .right .price{
	display:flex;
	width:210rpx;
	position:relative;
	height:36rpx;
	justify-content:space-between;
}
.page-aftersalelist .gooditem .body .right .price .marketPrice{
	font-size:28rpx;
	color:#9B9B9B;
	letter-spacing:0;
	position:relative;
	bottom:-4rpx;
}
.page-aftersalelist .gooditem .body .right .price .unitPrice{
	font-size:30rpx;
	color:#0A0C11;
	letter-spacing:0;
	/*line-height:12px;*/
	position:relative;
	/*top:-16px;*/

}

.page-aftersalelist .gooditem .body .right .price .marketPrice:before{
	content:"¥";

}
.page-aftersalelist .gooditem .body .right .price .unitPrice:before{
	content:"¥";
	font-size:26rpx;
	position:relative;
	/*top:-4px;*/
	margin-right:4rpx;

	
}
.page-aftersalelist .gooditem .body .right .btn{
	position:absolute;
	bottom:0;
	right:0;
	font-family:PingFangSC-Regular;
