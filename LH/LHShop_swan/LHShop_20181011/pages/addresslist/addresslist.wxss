page{
    height: 100%
}
.address-wrap{
    width:750rpx;
    min-height: 100%;
    background-color: #f0f0f0;
}
.address-list{
    padding-bottom: 150rpx
}
.address-item{
    /*border-bottom:20rpx solid #f2f2f2;  */
    padding-top: 25rpx;
    position: relative;
    margin-bottom: 20rpx;
    background-color: white;
}
.address-item .info{
    padding:0 30rpx;
    padding-bottom: 20rpx;
    position: relative;
    border-bottom:1rpx solid #f2f2f2; 
}
.address-item .info > view{
    height: 50rpx;
    line-height:50rpx;
}
.address-item .name{
    font-size:36rpx;
    margin-top:20rpx;
}
.address-item .address{
    font-size:28rpx;
    color:#777676;
    margin-top: 10rpx;
}
.address-item .name .mobile{
    padding-left:20rpx;
}
.address-item .handle{
    display:flex;
    flex-direction:row;
    padding:0 30rpx;
    height:80rpx;
    align-items:center;
}
.address-item .handle > view{
    flex:1;
    /*height:60rpx;*/
    font-size:28rpx;
    /*line-height:60rpx;*/
    color:#8c8b8b;
}
.address-item .handle .default{
    display: flex;
    align-items: center;
    position: relative;
}
.address-item .handle .default .check{
    width:32rpx;
    height:32rpx;
    position: relative;
    margin-right : 20rpx;
}
.address-item .handle .default .check image{
    position: absolute;
    left : 0;
    top : 0;
    width:100%;
    height:100%;
}
.address-item .status{
    position: absolute;
    top : 50%;
    right : 20rpx;
    margin-top : -24rpx;
    /*height:60rpx;*/
    display:flex;
    align-items:center;
    justify-content:flex-end;
    opacity: 0.8;

}
.address-item .status > view{
    /*float:right;*/
/*width:90rpx;*/
margin-left:20rpx;
font-size:26rpx;
display:flex;
align-items:center;


}
.address-item .status image{
    vertical-align:middle;
    width:48rpx;
    height:48rpx;
    margin-right: 10rpx
}
.address-item .status text{
    padding-left:40rpx;
    background-size:37rpx;
    background-position:left center;
    background-repeat:no-repeat;
}
.address-item .status text image{
    display: inline-block;
}
.empty{
    padding:60rpx 0rpx;
    font-size:30rpx;
    text-align: center;
}
.add-btn{
    margin-top:10rpx;
    position:fixed;
    bottom:0;
    height:100rpx;
    width:100%;
    font-size : 32rpx;
    justify-content:center;
    display:flex;
    align-items:center;
    background-color:#161823;
    color : #fff;
    color:white;
}
.add-btn image{
    width:25rpx;
    height:25rpx;
    margin-right:10rpx;
}
