@import "../../widgets/modules/modules.wxss";

.distribution { padding-top: 100rpx; height :100%; color : #4a4a4a; }

.distribution .noagent .userinfo { padding : 140rpx 0; text-align: center; background-color: #fff; }
.distribution .noagent .userinfo .logo { height : 160rpx; width : 160rpx; border : solid 1px #fafafa; border-radius: 80rpx; margin : 0 auto; }
.distribution .noagent .userinfo .name { width : 100%; font-size : 38rpx; margin-top : 20rpx; }

.distribution .noagent .phone { display: flex; padding : 40rpx 20rpx; align-items: center; height : 50rpx; border-bottom: solid 1px #fafafa; background-color: #fff; }
.distribution .noagent .phone .key { font-size : 32rpx; padding : 0 20rpx; height : 100%; line-height: 50rpx; }
.distribution .noagent .phone .val { flex-grow: 1; }
.distribution .noagent .phone .val input { width : 100%; height : 50rpx; line-height: 50rpx; width : 100%; }

.distribution .noagent .act { padding : 40rpx 20rpx; }
.distribution .noagent .act .btn { font-size : 34rpx; border-radius: 8rpx; color : #fff; background-color: #d6204b; padding : 10rpx 0; display: block; text-align: center; }


.distribution .isagent .userinfo { padding : 40rpx 0; display: flex; height : 120rpx; background-color: #fff; }
.distribution .isagent .userinfo .user{ width : 170rpx; padding-right: 30rpx; text-align: right; height : 100%; }
.distribution .isagent .userinfo .user image { border : solid 1px #fafafa; height : 120rpx; width: 120rpx; border-radius: 60rpx; }
.distribution .isagent .userinfo .cont { height : 100%; display: flex; flex-wrap : wrap; align-content : space-around; }
.distribution .isagent .userinfo .cont .main { width : 100%; font-size : 36rpx; color : #404040; }
.distribution .isagent .userinfo .cont .sub { width : 100%; font-size : 28rpx; color : #ccc; }

.distribution .isagent .codeinfo { text-align: center; border-top : solid 1px #f5f5f5; background-color: #fff; padding : 40rpx 0; }
.distribution .isagent .codeinfo .code{ width : 280rpx; height : 280rpx; margin : 0 auto; margin-top : 40rpx; }
.distribution .isagent .codeinfo .info { margin-top: 40rpx; font-size : 32rpx; }
.distribution .isagent .codeinfo .btn { margin-top : 40rpx; font-size : 34rpx; border-radius: 8rpx; color : #fff; background-color: #d6204b; width : 670rpx; margin : 0 auto; margin-top : 40rpx; padding : 30rpx 0; }

.distribution .isagent .agentinfo { padding : 0 40rpx; }
.distribution .isagent .agentinfo .title { font-size: 28rpx; color : #aaa; padding : 20rpx 0; }

.distribution .unuse { z-index: 10000; position: fixed; background-color: rgba( 0, 0, 0, 0.6 ); width : 100%; height : 100%; top : 0; left : 0; color : #fff; display: flex; justify-content : center; align-content : center; flex-wrap: wrap; }


.distribution .goLogin-wrapper { position:fixed; height:100%; background-color: #f6f6f6;  top:0; left : 0; width : 100%; display:flex; flex-direction:column; justify-content:center; align-items:center; }
.distribution .goLogin-wrapper .login-logo { width:150rpx; height:160rpx; margin-bottom:140rpx; }
.distribution .goLogin-wrapper .login-msg { font-size:16px; color:#999999; margin-bottom:112rpx; }
.distribution .goLogin-wrapper .login-btn { font-size:17px; color:#FFFFFF; background:#d6204b; box-shadow:0 5px 10px 0 rgba(0,0,0,0.20); border-radius:80px; width:320rpx; height:100rpx; display:flex; justify-content:center; align-items:center; margin-bottom:200rpx; }












.distribution .unuse view {  width : 100%; height : 100rpx; line-height: 100rpx; text-align: center; font-size : 58rpx;   }
