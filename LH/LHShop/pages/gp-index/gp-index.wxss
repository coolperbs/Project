@import "../../widgets/modules/modules.wxss";
.page-gouponindex{
	background-color: #f2f2f2;
}


.gouponitem-tpl{
	width:100%;
	background-color:white;
	height:570rpx;
	margin-bottom:20rpx;		
}
.gouponitem-tpl .wrapper{
	position:relative;
	width:100%;
	height:100%;	
}
.gouponitem-tpl .wrapper .ware-img{
	width:100%;
	height:340rpx;	
}
.gouponitem-tpl .wrapper .ware-img image{
	width: 100%;
	height: 100%;
}
.gouponitem-tpl .wrapper .ware-name{
	width:710rpx;
	margin:auto;
	font-size:34rpx;
	color:#535353;
	height:98rpx;	
}
.gouponitem-tpl .wrapper .ware-desc{
	height: 100rpx;
}
.gouponitem-tpl .wrapper .ware-detail{
	display:flex;
	justify-content:space-between;
	width:710rpx;
	margin:auto;
	align-items:flex-end;
	margin-top:20rpx;	
	
}
.gouponitem-tpl .wrapper .ware-detail .left-side{
	display: flex;
	/* align-items: flex-end; */
	flex-direction: column;
}
.gouponitem-tpl .wrapper .ware-detail .quantity{
	color:#df393c;
	font-size:30rpx;
	/* font-weight:bold; */
	padding-left: 10rpx;
}
.gouponitem-tpl .wrapper .ware-detail .unitPrice{
	color:#df393c;
	font-size:38rpx;
	font-weight:bold;	
}
.gouponitem-tpl .wrapper .ware-detail .left-side-bottom{
	display:flex;
	align-items:flex-end;
}

.gouponitem-tpl .wrapper .ware-detail .finished{
	color:#9f9f9f;
	font-size: 25rpx;
	margin-left: 20rpx;
	margin-bottom: 6rpx;
}
.gouponitem-tpl .wrapper .ware-detail .btn-wrapper{
	display:flex;
	align-items:center;	
	background-color:#df393c;
	color:white;
	/* height:70rpx;
	line-height:70rpx; */
	font-size:28rpx;
	border-radius:8rpx;
	padding:15rpx 40rpx;
}
.gouponitem-tpl .wrapper .ware-detail .basic-wrapper{
	margin-left: 20rpx
}
.gouponitem-tpl .wrapper .ware-detail .buybtn{
	
	
}
.gouponitem-tpl .addCart{
	width: 35rpx;
	height: 35rpx;
	margin-left: 10rpx;
}
.gouponitem-tpl .wrapper .ware-detail .finished-people{
	position:relative;
	width:150rpx;
	height:50rpx;	
}
.gouponitem-tpl .wrapper .ware-detail .finished-people .user-head{
	width:50rpx;
	height:50rpx;
	border-radius:50%;
	position:absolute;	
}
.gouponitem-tpl .wrapper .ware-detail .finished-people image:nth-child(2){
	left: 30rpx;
}
.gouponitem-tpl .wrapper .ware-detail .finished-people image:nth-child(3){
	left:60rpx;
}
