page { height : 100%; width : 100%; overflow-x: hidden; background-color: #f8f8f8; color : #4a4a4a; font-size : 24rpx; }

.page { height : 100%; color : #4a4a4a; font-size : 24rpx; }

.head-nav { height : 20rpx; width : 100%; position: fixed; top : -18rpx; left : 0; background-color: #efefef; box-shadow: 0 10rpx 20rpx rgba( 0, 0, 0, 0.05 ); }
.page-tips { width : 100%; height : 60rpx; line-height: 60rpx; font-size : 26rpx; background-color: #DEBA7C; color : #fff; text-align: center; box-shadow: 0 10rpx 20rpx rgba( 222, 186, 124, 0.3 ); }

.price { font-size : 40rpx;   color : #ff502e; display: inline-block; }
.price .sub { margin-right : 8rpx; font-size : 28rpx; display: inline-block; }
.favo-info { color : #9b9b9b; font-size : 28rpx; }


.checkbox { display: inline-block; width : 48rpx; height : 48rpx; border-radius: 50%; }
.checkbox image { display: none; width : 100%; height : 100%; }
.checkbox .off { display: block;  }
.checkbox.checked .on { display: block; }
.checkbox.checked .off { display: none; }

.content { padding : 20rpx; padding-bottom : 140rpx; position: relative; }
