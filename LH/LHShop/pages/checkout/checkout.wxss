.item .act { width : 60rpx; display: flex; padding : 20rpx 0; color : #4A4A4A; font-size : 28rpx; justify-content : flex-end; align-items : center; }
.item .act .sub { font-size : 24rpx; margin-right : 6rpx; display: inline; }

.total { color : #4a4a4a; padding : 0 30rpx; height : 100rpx; line-height: 100rpx; background-color: #fff; text-align: right; font-size : 26rpx; }
.total .sub-info { margin-right : 6rpx; display: inline-block; font-size : 26rpx; }
.total .price { color : #000;   }
.module { padding : 10rpx 0; background-color: #fff; position: relative; }

.order-info { background-color: #fff; color : #4a4a4a; font-size : 32rpx; border-top : solid 1px #f8f8f8; box-shadow: 0 5px 10px #f2f2f2;  margin-bottom : 20rpx; }
.order-info .row { padding : 18rpx 0; display: flex; justify-content : space-between; align-items: center; border-bottom : solid 1px #f8f8f8; position: relative; }
.order-info .row:last-child { border-bottom : 0; }
.order-info .row .primary { color : #ff543f; }
.order-info .row .key { padding-left : 30rpx;/*  */ width : 150rpx; }
.order-info .row .value { position : relative; color : #4a4a4a; padding-right : 30rpx; max-width : 500rpx; flex-grow : 1; }
.order-info .row .value.black { color : #4A4A4A; }
.order-info .row .value .more { display: inline-block; width : 30rpx; height: 30rpx; line-height: 32rpx; }
.order-info .row.ableclick .value { padding-right : 60rpx; position: relative; }
.order-info .row.ableclick .value .more { position: absolute; right : 30rpx; top : 50%; margin-top : -14rpx; }
.order-info .row .value input { position: relative; color : #4a4a4a; text-indent: left; display: inline-block; z-index : 100; width : 480rpx; }
.order-info .row .value.address { justify-content: center; max-width: none; color : #df393c; }
.order-info .address { display: flex; }
.order-info .address .picker { padding : 0; width:33.33%; margin-left : 20rpx; color : #4a4a4a; }
.order-info .address .picker view { width : 100%; margin : 0; padding : 0; text-align: left;  }
.order-info .address .picker:first-child { margin-left : 0; }


.payment { margin-bottom : 20rpx; font-size : 32rpx; }
.payment .row { padding : 18rpx 30rpx; display: flex; justify-content : space-between; align-items: center; border-bottom : solid 1px #f8f8f8; position: relative; }
.payment .row:last-child { border-bottom : 0; }
.payment .row .primary { color : #ff543f; }
.payment .row .key { display: flex; align-items: center; }
.payment .row .key image { width : 48rpx; height : 48rpx; margin-right : 20rpx; }
.payment .row .value { position : relative; color : #4a4a4a; padding-right : 30rpx; max-width : 500rpx; flex-grow : 1; }
.payment .row .little { font-size : 24rpx; color : #ccc; }

.sum { padding : 0 30rpx; background-color: #fff; }
.sum .row { height : 100rpx; font-size : 32rpx; display: flex; justify-content : space-between; align-items : center; position: relative; border-bottom : solid 1px #f8f8f8; }
.sum .row:first-child { border-top : solid 4rpx #f8f8f8; }
.sum .row:first-child::before { content : ' '; width : 100%; height : 0; border-bottom : solid 1px #f8f8f8; position: absolute; top : -8rpx; }
.sum .row:last-child::after { content : ' '; width : 100%; height : 0; border-bottom : solid 4rpx #f8f8f8; position: absolute; bottom  : -8rpx; }
.sum .row .value { display: flex; align-items: center; }
.sum .row .value .more { display: inline-block; width : 30rpx; height: 30rpx; line-height: 30rpx; }
.sum .row .value.red { color : #FF502E; }
.sum .row .sub { display: inline; color : #9B9B9B; }
.sum .row .key .sub-key { font-size : 24rpx; }
.sum .row .value.jifen input{ padding : 0 10rpx; width : 80rpx; border-radius: 8rpx; border : solid 1px #f0f0f0; margin : 0 10rpx; text-align: right; }


.mask { transition: opacity 0.5s ease; width : 0; height : 0; position: fixed; top : 0; left : 0; z-index : 1000; background-color: #000; opacity: 0; }
.mask.show { width : 100%; height: 100%; opacity: 0.3; }
.address-list { transition: all 0.3s ease; transform: translate3d( 0, 100%, 0); color : #4a4a4a; position: fixed; height : 80%; bottom : 0; width : 100%; z-index: 1001; background-color: #fff;  }
.address-list.show { transform: translate3d( 0, 0, 0); }
.address-list scroll-view { height: 100%; width : 100%; }
.address-list .address { display: flex; padding : 30rpx 20rpx; border-bottom : solid 1px #f0f0f0; align-items: center; }
.address-list .address:last-child { margin-bottom : 100rpx; }
.address-list .address .checkbox { width : 42rpx; height: 100%; display: flex; align-items: center; }
.address-list .address .checkbox image { display: none; width: 42rpx; height : 42rpx; }
.address-list .address .checkbox.checked .on { display: block; }
.address-list .address .checkbox.checked .off { display: none; }
.address-list .address .checkbox .off { display: block;  }
.address-list .address .info { margin-left : 20rpx; }
.address-list .address .name { font-size : 32rpx; }
.address-list .address .detail { font-size : 28rpx; margin-top : 20rpx; color : #4a4a4a; }
.address-list .new { margin-bottom: 100rpx; height : 100rpx; text-align: center; line-height: 100rpx; color : #df393c; font-size : 32rpx; }
.address-list .act { position: absolute; bottom : 0; left : 0; width : 100%; height : 100rpx; display: flex; }
.address-list .act .btn { background-color: #161823; color : #fff; font-size : 32rpx; display: flex; flex-grow : 1; justify-content: center; align-items: center; }











