page{ height : 100%; width : 100%; }
 
.index { position: relative; width : 100%; height : 100%; display: flex; flex-direction: column; align-items: center; justify-content: center; }
.info { margin-top : -400rpx; display: flex; flex-direction: column; align-items: center; justify-content: center; }
.index .logo { height : 240rpx; width : 240rpx; border-radius : 120rpx; display: flex; align-items: center; justify-content: center; background-color: #eee; color : #fff; font-size : 48rpx; }
.index .des { font-size : 28rpx; color : #aaa; margin-top : 20rpx; }
.index .act { margin-top : 80rpx; display: flex; align-items: center; justify-content: center; }
.index .act .btn { background-image:linear-gradient(0deg,#da3633,#e05e39); box-shadow: 0 10rpx 20rpx rgba( 0, 0, 0, 0.1 ); font-size : 32rpx; margin-right : 40rpx; display: flex; align-items: center; justify-content: center; color : #fff; height : 100rpx; border-radius: 50rpx; width : 300rpx; background-color: #ccc; }
.index .act .btn:last-child { margin-right : 0; }


