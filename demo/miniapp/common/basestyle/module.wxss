.empty-list {
	width : 100%;
	margin-top : 100rpx;
	text-align: center;
	font-size : 28rpx;
	color : #ccc;
}
/***文章列表CSS**/
.artical{
	display: flex;
	width: 700rpx;
	height: 170rpx;
	padding: 20rpx;
	background-color: white;
	border-bottom: 1px solid #f0f0f0;
}
.artical:last-child { border-bottom : none; }
.artical .left{
	width: 170rpx;
	height: 170rpx;
}
.artical .right{
	width:450rpx;
	padding-left:20rpx;
	position:relative;
}
.artical .left .artical-img{
	width: 100%;
	height: 100%;
	background-color: #f9f9f9;
	border : solid 1px #f0f0f0;
	box-shadow : 10rpx 10rpx 10rpx rgba( 0, 0, 0, 0.05 );
}
.artical .right .artical-title{
	 overflow:hidden; 
	 font-size: 34rpx;
}
.artical .right .artical-cont{
	 overflow:hidden; 
	 font-size: 26rpx;
	 margin-top : 20rpx;
	 color : #444;
}
.artical .right .artical-date{
	font-size:20rpx;
	color : #9b9b9b;
}
.artical .right .artical-type{
	font-size:20rpx;
	margin-left : 20rpx;
	display: inline;
}
/***表单css***/

.form-wrapper{
	width:100%;
	margin: 0 auto;
	background-color:white;
	padding-bottom:10rpx;
}
.form-wrapper .form-header{
	height: 100rpx;
	font-size: 38rpx;
	color:#333333;
	line-height: 100rpx;
	padding:0 20rpx;
	position: relative;
	border-bottom:1px solid #f0f0f0;
	display: flex;
	align-items: center;
}
.form-wrapper .form-header .logo{
	background-color:#EA4834;
	width: 10rpx;
	height: 40rpx;
	margin-right : 20rpx;
}
.form-wrapper .form-content{
	display:flex;
	flex-direction:column;
	position:relative;
	margin:0 30rpx;
}
.form-content .field{
	display:flex;
	font-size:28rpx;
	min-height:60rpx;
	padding:10rpx 0;
	margin-bottom : 10rpx;
	flex-direction:column;
}
.form-content .field:first-child {
	margin-top : 0;
}

.form-wrapper .form-content:last-child .field{
	border-bottom: none;
}
.form-content .field .notBlank{
	position:absolute;
	color:#EA4834;
	font-size:20rpx;
	top:8rpx;
	left:2rpx;
}
.form-content .field .name{
	color:#434552;
	padding-left:10px;
	position:relative;
	margin-bottom: 10rpx;

}

.form-content .field picker{
	position:absolute;
	width:100%;
	text-align:left;
}
.form-content .field picker .picker-view{
	margin-left: 3%;
}
.form-content .field picker .picker-view.placeholder{
	color:#898989;
}


.form-content .field .value{
	/*width: 550rpx*/
	background-color:#f9f9f9;
	min-height:75rpx;
	border-radius: 8rpx;
	position:relative;
	display:flex;
	justify-content:space-between;
	align-items:center;
	border:1px solid #f0f0f0;

}

.form-content .field .upload {
	background-color: #fff;
	border : none;
	justify-content: flex-start;
}
.form-content .field .upload image { margin-right : 20rpx; width : 64rpx; height: 64rpx; }

.form-content .field input,
.form-content .field textarea{
	color: #444;
	/*padding:0 10rpx;*/
	/*border-bottom:1px solid #f0f0f0;*/
	height:75rpx;
	padding-left:3%;
	width: 100%;
}
.form-content .field textarea{
	height: 200rpx;
	padding-top: 10rpx;
}
.form-content .field.inValid .name{
	color: #EA4834
}
.form-content .field .notice{
	color:#EA4834;
	font-size:26rpx;
	margin-left:10rpx;
	margin-top:10rpx;
}
.shadowline {
	width : 100%;
	height : 20rpx;
	position: fixed;
	top : -20rpx;
	left : 0;
	background-color: #fff;
	z-index: 100;
	box-shadow: 0 10rpx 20rpx rgba( 0, 0, 0, 0.05 );
}

.btn-wrapper{
	height : 100rpx;
	background-color: #fff;
	position: fixed; 
	bottom : 0;
	left : 0;
	width : 100%;
	z-index: 1000;
	border-top : solid 1px #f0f0f0;
	display:flex;
	align-items:center;
	justify-content:space-between;
}
.btn-wrapper .btn{
	height : 100%;
	font-size : 32rpx;
	width:100%;
	display: flex;
	align-items: center;
	justify-content: center;
}
.btn-wrapper .btn.long{
	height : 100%;
	width: 100%;
	text-align:center;
}
.btn-wrapper .btn.submit{
	background-image:linear-gradient(0deg,#da3633,#e05e39);
	color: white;
}
.btn-wrapper .btn.cancel{
	background-color: #fff;
	color:#888;
}



/***搜索框***/
.search-box {
	font-size:28rpx;
	display:flex;
	width:710rpx;
	padding : 0 20rpx;
	align-items:center;
	height: 100rpx;
	background-color: white;
	justify-content: space-between;
}
.search-box .search-botton {
	height : 100%;
	width : 100rpx;
	display : flex;
	align-items: center;
	justify-content: center;
	margin-left : 20rpx;
	font-size : 28rpx;
	flex-wrap: 0;
}
.search-box .back{
	color:#ccc;
	width:115rpx;
	text-align:center;
}
.search-box .search-wrapper{
	width : 100%;
	flex-wrap: 1;
}
.search-box .search-wrapper .search-txt{
	background-color:#f0f0f0;
	border-radius:50rpx;
	padding:10rpx 20rpx;
}