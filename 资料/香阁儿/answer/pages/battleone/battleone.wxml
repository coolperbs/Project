<!--pages/battleone/battleone.wxml-->
<view wx:if="{{showBattle}}" class="battle">
	<view class="battle-head">
		<view class="battle-left">
			<view class="battle-user-box">
				<view class="battle-user">
					<image mode="aspectFit" class="battle-user-head" src="{{roomUsers[0].avatar}}"></image>
					<view class="battle-user-score">360</view>
				</view>
				<view class="battle-user-name-box">
					<view class="battle-user-level">{{roomUsers[0].level}}</view>
					<view class="battle-user-name">{{roomUsers[0].name||'NPC'}}</view>
				</view>
			</view>
			<view class="battle-progress-bar">
				<view class="battle-progress"></view>
			</view>
		</view>
		<view class="battle-center">
			<view class="battle-count">{{countDown}}</view>
			<image mode="aspectFit" class="battle-vs" src="../../static/images/vs-small.png"></image>
		</view>
		<view class="battle-right">
			<view class="battle-user-box">
				<view class="battle-user">
					<view class="battle-user-score">360</view>
					<image mode="aspectFit" class="battle-user-head" src="{{roomUsers[1].avatar}}"></image>
				</view>
				<view class="battle-user-name-box">
					<view class="battle-user-level">{{roomUsers[1].level||''}}</view>
					<view class="battle-user-name">{{roomUsers[1].name||'NPC'}}</view>
				</view>
			</view>
			<view class="battle-progress-bar">
				<view class="battle-progress"></view>
			</view>
		</view>
	</view>
	<view class="battle-question-box">
		<view class="battle-question" animation="{{questionTypeAniData}}">
			{{question.subject.type}}
		</view>
		<view class="battle-question" animation="{{questionTitleAniData}}">
			{{question.subject.title}}
		</view>
	</view>
	<view class="battle-scroll" animation="{{questionListAniData}}">
		<view wx:for="{{question.subject.optionList}}" wx:key="{{index}}"
					class="battle-btn {{item.className}}"
					data-index="{{index+1}}"
					catchtap="answerEvt">{{item.label}}
		</view>
		<!--<view class="battle-btn success">xxxx</view>-->
		<!--<view class="battle-btn error">xxxx</view>-->
	</view>
</view>
<view wx:if="{{showRound}}" animation="{{roundAniData}}" class="battle-stage">
	<view animation="{{leftAniData}}" class="left">
		<view class="user">
			<image mode="aspectFit" class="head"></image>
			<view class="name">Shelan</view>
			<view class="level">V1</view>
		</view>
	</view>
	<view animation="{{rightAniData}}" class="right">
		<view class="user">
			<image mode="aspectFit" class="head"></image>
			<view class="name">Shelan</view>
			<view class="level">V1</view>
		</view>
	</view>
	<image animation="{{centerAniData}}" class="vs" mode="aspectFit" src="../../static/images/VS2.png"></image>
</view>
<view wx:if="{{showLoading}}" animation="{{loadingAniData}}" class="loading">
	寻找对手中/.////
</view>
