/* pages/home/home.wxss */

.home-container {
    margin: 0 50rpx
}

.home-btn {
    width: 650rpx;
    height: 244rpx;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    overflow: hidden;
}

.home-btn.disabled {
    position: relative;
}

.home-btn.disabled:before {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    content: '';
    background: rgba(30, 1, 65, 0.6);
}
.home-btn-group{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.home-btn-group .home-btn{
    width: 200rpx;
    height: 200rpx;
}
.home-btn-group .home-btn:nth-child(2){
    margin: 0 20rpx 20rpx 20rpx;
}
image {
    width: inherit;
    height: inherit;
}
