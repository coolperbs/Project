Page { width : 100%; height : 100%; background-color : #ccc; }
.content { height : 100%; display: flex; flex-direction : column; }

.radar { position: relative; height : 650rpx;margin : 0 50rpx; }
.radar .c-radar { z-index: 1; position: absolute; top : 0; left : 0; width : 650rpx; height : 650rpx;}
.radar .col { z-index: 10; display: flex; flex-direction: column; justify-content: space-between; font-size : 26rpx; color : rgba( 255, 255, 255, 0.5 ); }
.radar .col .label { width :100%; }
.radar .col-1 { height : 340rpx; top : 155rpx; right : 590rpx; position: absolute; }
.radar .col-1 .label { text-align: right; }
.radar .col-2 { height : 100%; margin : 0 auto; }
.radar .col-2 .label { text-align: center; }
.radar .col-3 { height : 340rpx; top : 155rpx; left : 590rpx; position: absolute; }
.radar .col-3 .label { text-align: left; }
.radar .logo { z-index: 100; width : 134rpx; height: 134rpx; border : solid 8rpx #e10083; border-radius: 50%; position: absolute; left : 50%; top : 50%; margin-top : -75rpx; margin-left : -75rpx; background-color: #fff; }
.radar .logo image { width : 100%; height : 100%; }



.list-wrapper { overflow: hidden; border-radius : 20rpx; padding : 4rpx; background: linear-gradient( rgba( 90, 147, 236, 0.5 ), rgba( 237, 71, 199, 0.5 ) ); overflow: hidden; height : 100rpx; flex-grow : 1; width : 640rpx; margin : 40rpx auto 40rpx auto; display: flex; flex-direction : column; }
.list-wrapper .list { padding : 30rpx;display: flex; flex-direction: column; justify-content: space-between; border-radius : 20rpx; height : 10rpx; flex-grow : 1; background-color: rgba( 0, 0, 0, 0.4 ); }
.list .row { display: flex; justify-content: space-between; align-items: center; color : #fff; height : 50rpx; border-bottom : solid 1px rgba( 255, 255, 255, 0.1 ); font-size : 24rpx; }
.list .row:last-child { border-bottom : 0; }
.list .row .key { opacity: 0.4; }
.list .row .line { width : 360rpx; overflow : hidden; height : 10rpx; border-radius: 10rpx; background-color : rgba( 0, 0, 0, 0.3 ); }
.list .row .line .line-v { height : 100%; background-color: #5abeec; border-radius : 10rpx; }





