

.main-title { font-size : 36rpx; padding : 0 30rpx; margin-top : 30rpx; }
.time { padding : 0 30rpx; font-size : 24rpx; margin-top : 10rpx; color : #999; }
.content { border-bottom : solid 1px #f0f0f0; padding-bottom : 60rpx; width : 690rpx; margin : 0 30rpx; margin-top: 60rpx; }
.content .p { font-size : 32rpx; text-indent: 56rpx; margin-top : 30rpx; }
.content .t { font-size : 32rpx; margin-top : 30rpx; }
.content image { width : 100%; margin-top : 30rpx; }

.comment { width : 610rpx; margin : 0 30rpx; padding-left : 80rpx; padding-bottom : 130rpx; }
.comment .item { border-bottom : solid 1px #f0f0f0; padding-bottom : 40rpx; }
.comment .item:last-child { border-bottom : 0; }
.comment .item .title { display: flex; align-items: center; font-size : 32rpx; height : 40rpx; margin : 40rpx 0 20rpx 0; }
.comment .item .title .icon { height : 60rpx; width : 60rpx; margin-left : -80rpx; position: relative; top : 20rpx; margin-right : 20rpx; border-radius: 50%; overflow: hidden; }
.comment .item .title:before { display: block; height : 30rpx; width : 8rpx; border-radius: 8rpx; content : ''; background-color: #EE4000; position: absolute; left: -30rpx; top: 50%; margin-top: -15rpx; }
.comment .item .sub { margin-top : -10rpx; font-size : 24rpx; color : #999; }
.comment .item .main { margin-top : 30rpx; font-size : 28rpx; }
.comment .item .pics { display: flex; flex-wrap: wrap; }
.comment .item .pics image { width : 160rpx; height: 160rpx; margin-left : 30rpx; border-radius: 20rpx; margin-top : 30rpx; }
.comment .item .pics image:first-child { margin-left: 0; }

.act { color : #EE4000; letter-spacing: 4rpx; width : 100%; height : 100rpx; display: flex; justify-content : center; align-items : center; font-size : 28rpx; position: fixed; bottom : 0; left : 0; background-color: #fff; box-shadow: 0 -6rpx 14rpx rgba( 0, 0, 0, 0.1 ); }







