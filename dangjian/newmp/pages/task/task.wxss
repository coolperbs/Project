Page { background-color: #fafafa; color : #444; }
.form { background-color: #fff; margin-top : 20rpx; }
.form .item { font-size : 28rpx; padding : 20rpx; border-bottom : solid 1px #fafafa; display: flex; align-items : center; justify-content : space-between; }
.form .item:last-child { border-bottom : 0; }
.form .item .value { color : #999; flex-grow : 1; display: flex; justify-content : flex-end; align-items : center; }
.form .item .arrow { margin-right : -20rpx; width : 48rpx; height : 48rpx; }
.form .detail { padding : 20rpx; }
.form .detail textarea { margin-top : 20rpx; height : 200rpx; }





