.banner { position: relative; width : 710rpx; height : 300rpx; overflow: hidden; border-radius : 20rpx; box-shadow: 0 6rpx 14rpx rgba( 0, 0, 0, 0.1 ); margin : 20rpx 20rpx 0 20rpx; }
.banner image { width : 100%; height : 100%; }
.banner .content { z-index: 1; position: absolute; left : 0; top : 0; width : 100%; color : #fff; }
.banner .content .title { padding : 30rpx; font-size : 48rpx; }
.banner .content .desc { font-size : 24rpx; padding : 0 30rpx; }

.loc { border-radius: 20rpx; overflow: hidden; width : 690rpx; margin : 20rpx 30rpx 0 30rpx; }
.loc .info { font-size : 28rpx; margin-top : 30rpx;}
.loc map { width : 100%; height : 300rpx; }


.mod { padding : 40rpx 20rpx; border-bottom : solid 1px #f0f0f0; }
.mod:last-child,
.mod.last { border-bottom: 0; }
.mod .mod-name { font-size : 36rpx; }

.police .list { margin-top : 30rpx; display: flex; align-items : center; justify-content : space-between; }
.police .list .item { box-shadow: 0 6rpx 14rpx rgba( 0, 0, 0, 0.1 ); border-radius : 20rpx; width : 345rpx; overflow: hidden; }
.police .list .item .user { display : flex; align-items : center; justify-content : space-between; }
.police .list .item .user image { width : 120rpx; height : 150rpx; }
.police .list .item .user .info { height : 150rpx; display: flex; flex-direction : column; justify-content : space-around; margin-left : 20rpx; flex-grow : 1; }
.police .list .item .user .name { font-size : 32rpx; }
.police .list .item .user .name .em { display: inline; font-size : 20rpx; margin-left : 10rpx; color : #999; }
.police .list .item .user .sub { font-size : 24rpx; color : #999; }
.police .list .item .user .phone { width : 150rpx; display: flex; align-items : center; color : #fff; background-color: #EE4000; font-size :20rpx; height : 40rpx; border-radius : 20rpx; padding : 0 20rpx; }
.police .list .item .user .phone image { margin-right : 10rpx; margin-left : -10rpx; width : 24rpx; height : 24rpx; }