.view-home{	padding-bottom: 120rpx; font-size: 28rpx; color : #444; }
.view-home .shadow { box-shadow: 0 6rpx 14rpx rgba( 0, 0, 0, 0.1 ); }
.view-home .head { display: flex; align-items: center; justify-content: space-between; height : 240rpx; padding : 10rpx 20rpx; }
.view-home .head .sub { width : 140rpx; height : 100%; display: flex; flex-direction: column; justify-content: space-between; align-items: center; }
.view-home .head .sub .date { border-radius: 20rpx; overflow: hidden; width : 140rpx; height : 150rpx; position: relative; display: flex; flex-direction: column; justify-content: center; align-items: center; }
.view-home .head .sub .date image { position: absolute; left: 0; top: 0; width: 100%; height : 100%; }
.view-home .head .sub .date .text { z-index: 10; color : #fff; }
.view-home .head .sub .date .text.em { font-size : 60rpx; letter-spacing: 8rpx; }
.view-home .head .sub .message { border : solid 1px #fafafa; border-radius: 20rpx; height : 60rpx; width: 100%; background-color: #fff; display: flex; align-items: center; }
.view-home .head .sub .message .icon { width : 50rpx; height : 50rpx; margin : 0 10rpx 0 10rpx; }
.view-home .head .main { border-radius: 20rpx; width : 550rpx; overflow: hidden; height: 100%; background-color: #fafafa; }
.view-home .head .main .swiper { width: 100%; height: 100%; }
.view-home .head .main image { border-radius: 20rpx; width: 100%; height: 100%; }

.view-home .services { padding : 20rpx 0 30rpx 0; border-bottom: solid 1px #f0f0f0; display: flex; align-items: center; justify-content: center; }
.view-home .services .item { margin : 0 30rpx; font-size: 24rpx; display: flex; align-items: center; justify-content: space-between; flex-direction: column; }
.view-home .services .item image { width : 40rpx; height: 40rpx; margin-bottom : 10rpx; }

.view-home .mod { padding : 40rpx 20rpx; border-bottom : solid 1px #f0f0f0; }
.view-home .mod:last-child { border-bottom: 0; }
.view-home .mod .mod-name { font-size : 36rpx; }
.view-home .mod .message .title { position: relative; padding-left : 30rpx; font-size:30rpx; margin : 20rpx 0; }
.view-home .mod .message .title:before { display: block; height : 30rpx; width : 8rpx; content : ''; background-color: #EE4000; position: absolute; left: 0; top: 50%; margin-top: -15rpx; }
.view-home .mod .message .title .em { position: absolute; right : 0; top: 0; color : #fff; background-color: #000; display: inline-block; font-size: 20rpx; padding : 6rpx 10rpx; background-color: #FFC125; }
.view-home .mod .message .msg { color : #999; margin-top : 10rpx; text-indent: 30rpx; line-height: 32rpx; letter-spacing: 2rpx; font-size : 24rpx; }

.view-home .list-wrapper { width : 710rpx; overflow: hidden; margin-top: 30rpx; }
.view-home .list-wrapper .list { display: flex; align-items: center; flex-wrap: no-wrap; }
.view-home .list-wrapper .list .item { margin-left : 30rpx; }
.view-home .list-wrapper .list .item:first-child { margin-left : 0; }
.view-home .list-wrapper .list .pic { position : relative; border-radius: 20rpx; overflow: hidden; height : 200rpx; width : 200rpx; }
.view-home .list-wrapper .list .pic image { height : 200rpx; width : 200rpx; }
.view-home .list-wrapper .list .pic .text { width : 180rpx; background-color: rgba( 0, 0, 0, 0.4 ); color : #fff; font-size : 20rpx; padding : 10rpx; position: absolute; bottom : 0; left : 0; }

.view-home .news .list { margin-top : 30rpx; }
.view-home .news .item { margin-top : 30rpx; display: flex; justify-content: space-between; }
.view-home .news .item:first-child { margin-top: 0; }
.view-home .news .item image { width : 140rpx; height : 140rpx; border-radius: 10rpx; }
.view-home .news .item .info { flex-flow: 1; display: flex; flex-direction: column; justify-content: space-between; }
.view-home .news .item .info .i-title { width : 560rpx; font-size : 30rpx; }
.view-home .news .item .info .i-cont { font-size : 24rpx; color : #999; }
.view-home .news .item.more { margin-top : 40rpx; justify-content: center; font-size : 28rpx; color : #999; }









