<template name="home">
	<view class="view-home">
		<template is="home-banner"></template>
		<template is="home-menu"></template>
		<template is="home-image"></template>
		<template is="home-articals"></template>
	</view>
</template>


<template name="home-banner">
	<view class="home-banner-wrapper">
		<swiper class="banner" 
		indicator-dots='{{true}}'
		autoplay='{{true}}
		interval='3000'
		circular='{{true}}'>
			<swiper-item class="swiper-item">
		      <image src="https://img.dmallcdn.com/mIndex/201710/66ec220b-e4c5-4ea4-bbd7-4481ab3d6ddd_750H" class="slide-image" catchtap="events" data-func="toArtical"/>
		      <view class="slide-title">生活工作不操心,便宜到尖叫</view>
		    </swiper-item>
		    <swiper-item class="swiper-item">
		      <image src="https://img.dmallcdn.com/mIndex/201711/17859e61-788e-4606-b232-ebbbf50a4c15_750H" class="slide-image" catchtap="events" data-func="toArtical"/>
		      <view class="slide-title">多点君为你准备好了一切</view>
		    </swiper-item>
		    <swiper-item class="swiper-item">
		      <image src="https://img.dmallcdn.com/mIndex/201711/42ebb5f6-dd5a-443c-a4b4-ae20b418ef47_750H" class="slide-image" catchtap="events" data-func="toArtical"/>
		      <view class="slide-title">酒水饮料买一赠一</view>
		    </swiper-item>
		</swiper>
	</view>
</template>
<template name="home-menu">
	<view class="home-menu-wrapper">
		<view class="button" bindtap="events" data-func="redirect" data-pagename="CPMove">
			<image class="logo" src=""></image>
			<text class="text">转移党组织</text>
		</view>
		<view class="button" bindtap="events" data-func="redirect" data-pagename="rules">
			<image class="logo" src=""></image>
			<text class="text">在线入党</text>
		</view>
		<view class="button" bindtap="events" data-func="redirect" data-pagename="taskSearch">
			<image class="logo" src=""></image>
			<text class="text">项目查询</text>
		</view>
		<view class="button" bindtap="events" data-func="redirect" data-pagename="taskApply">
			<image class="logo" src=""></image>
			<text class="text">项目申报</text>
		</view>
		<view class="button" bindtap="events" data-func="redirect" data-pagename="meetingStudy">
			<image class="logo" src=""></image>
			<text class="text">三会一课</text>
		</view>
		<view class="button" bindtap="events" data-func="redirect" data-pagename="CPStudyList">
			<image class="logo" src=""></image>
			<text class="text">党员学习</text>
		</view>
	</view>
</template>
