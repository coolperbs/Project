.view-home{
	padding-bottom: 120rpx;
}
.view-home .home-banner-wrapper{
	height: 400rpx;
	position: relative;
}
.view-home .home-banner-wrapper .banner{
	width: 100%;
	height: 100%;
}
.view-home .home-banner-wrapper .swiper-item{
	position: relative;
}
.view-home .home-banner-wrapper .slide-image{
	width: 100%;
	height: 100%;
}
.view-home .home-banner-wrapper .slide-title{
	position: absolute;
	top: 0;
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	background:rgba(0,0,0,0.7);
	font-size:26rpx;
	color: white;
	text-align: center;

}

.view-home .h-title {
	color : #fff;
	position: absolute;
	left : 0;
	z-index: 1;
	padding : 10rpx 20rpx;
	bottom : 0;
	width : 720rpx;
	text-align: center;
	font-size : 28rpx;
}

.view-home .home-menu-wrapper{
	display: flex;
	width: 100%;
	background-color: #fff;
	justify-content: space-between;
	border-bottom : solid 1px #f0f0f0;
}
.view-home .home-menu-wrapper:last-child {
	border-bottom: none;
}
.view-home .home-menu-wrapper .button{
	display: flex;
	flex-direction: column;
	width: 250rpx;
	justify-content: center;
	align-items: center;
	height: 200rpx;
	border-right : solid 1px #f0f0f0;
	background-color: white;
}
.view-home .home-menu-wrapper .button .logo{
	width: 64rpx;
	height: 64rpx;
	margin-bottom: 25rpx;
}
.view-home .home-menu-wrapper .button .text{
	color : #434343;
	font-size: 24rpx;
}

.view-home .home-image-wrapper{
	margin: 10 0rpx;
	height: 400rpx;
	width:710rpx;
	background-color: #f5f5f5;
	padding : 20rpx;
}
.view-home .home-image-wrapper image{
	width: 100%;
	height:100%;
}




