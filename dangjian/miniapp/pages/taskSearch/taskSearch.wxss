.taskitem{
	display: flex;
	width:660rpx;
	margin:auto;
	background-color: white;
	padding:20rpx;
}
.taskitem .left{
	width: 200rpx;
	height: 150rpx;
}
.taskitem .left image{
	width: 250rpx;
	height: 150rpx;
}
.taskitem .left image.user-imgae{
	position: absolute;
	top: 0;
	height: 0;
}
.taskitem .right{
	width: 420rpx;
	position: relative;
	display: flex;
	padding-left: 20rpx
}
.taskitem .right .title{
	overflow:hidden; text-overflow:ellipsis; display:-webkit-box; -webkit-box-orient:vertical; -webkit-line-clamp:2;
	position:absolute;
	top: 0;
	left: 0;
	width: 360rpx;
	font-size: 30rpx;
	color: #333;
}
.taskitem .right .time{
	position: absolute;
	top: 0;
	right: 0;
	width: 30rpx;
	font-size:26rpx;
	color: #CCC;
}
.taskitem .right .type{
	position: absolute;
	top: 80rpx;
	left: 0;
	color: #333
	font-size:26rpx;
}
.taskitem .right .status{
	position: absolute;
	bottom: 0;
	left: 0;
	color: #333;
	
}
