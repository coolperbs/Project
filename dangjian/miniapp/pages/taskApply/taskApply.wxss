	margin-top :40rpx;
	padding-bottom: 120rpx;
}
.page-taskApply .btn-wrapper.btns{
	margin-top: 20rpx;
}
.page-taskApply .page-record-wrapper .addBtn{


height:60rpx;
background-color:#EA4834;
color:white;
line-height:60rpx;
position:absolute;
right:20rpx;
font-size:24rpx;
padding:0 30rpx;
border-radius:10rpx;

}

.page-taskApply .pop-wrapper{
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
}
.page-taskApply .pop-wrapper .pop-bg{
	width: 100%;
	height: 100%;
	background-color: rgba(0,0,0,0.3);
}
.page-taskApply .pop-wrapper .pop-content{
	width:600rpx;
	height:750rpx;
	position:absolute;
	left:75rpx;
	top:250rpx;
	background-color:white;
	border-radius: 10rpx;

}
.page-taskApply .pop-wrapper .pop-detail{
	height:500rpx;
/*border:1px solid #f0f0f0;*/
padding:20rpx;
border-radius:10rpx;

}
.page-taskApply .pop-wrapper .pop-detail .input-wrapper{
	height:500rpx;
	border:1px solid #f0f0f0;
	padding:20rpx;
	border-radius:10rpx;
}
.page-taskApply .pop-wrapper .pop-detail .input-wrapper .recordInput{
	width: 100%;
	height: 100%;
}

.page-taskApply .pop-wrapper .pop-detail .button{
	width: 100%;
	height: 80rpx;
	background-color:#cc0033;
	color: white;
	border-radius: 10rpx;
	line-height: 80rpx;
	text-align: center;
	margin-top: 20rpx;
}





.note-record{
