
/***文章列表CSS**/
.artical{
	display: flex;
	width: 700rpx;
	height: 150rpx;
	padding: 20rpx;
	background-color: white;
	border-bottom: 1px solid #f0f0f0;
	margin:auto;
}
.artical .left{
	width: 250rpx;
	height: 100%;
}
.artical .right{
	display:flex;
	flex-direction:column;
	justify-content:space-between;
	width:450rpx;
	padding-left:20rpx;
	position:relative;
}
.artical .left .artical-img{
	width: 100%;
	height: 100%
}
.artical .right .artical-title{
	 overflow:hidden; 
	 text-overflow:ellipsis; 
	 display:-webkit-box; 
	 -webkit-box-orient:vertical; 
	 -webkit-line-clamp:2;
	 font-size: 32rpx;
	 color: #191919;
}
.artical .right .artical-date{
	font-size:24rpx;
	color:#9e9e9e;
	position:absolute;
	bottom:0rpx;
}
.artical .right .artical-type{
	font-size:24rpx;
	color:#4375a0;
	position:absolute;
	bottom:0rpx;
	left:80px;

}
/***表单css***/

.form-wrapper{
	width:730rpx;
	margin:auto;
	background-color:white;
	border-radius:8rpx;
	padding-bottom:10rpx;
	box-shadow:0 2rpx 2rpx 0 rgba(0,0,0,0.1);
	margin-top:20rpx;

}
.form-wrapper .form-header{
	height: 100rpx;
	font-size: 38rpx;
	color:#333333;
	line-height: 100rpx;
	padding:0 20rpx;
	position: relative;
	border-bottom:1px solid #f0f0f0;
	display: flex;
	align-items: center;
}
.form-wrapper .form-header .logo{
	background-color:#EA4834;
	width: 10rpx;
	height: 30rpx;
	position: absolute;
	left: 0;
	top: 35rpx;
}
.form-wrapper .form-content{
	display:flex;
	flex-direction:column;
	position:relative;
	margin:0 30rpx;

}
.form-content .field{
	display:flex;
	font-size:28rpx;
	min-height:60rpx;
	padding:10rpx 0;
	flex-direction:column;


}
.form-wrapper .form-content:last-child .field{
	border-bottom: none;
}
.form-content .field .notBlank{
	position:absolute;
	color:#EA4834;
	font-size:20rpx;
	top:8rpx;
	left:2rpx;
}
.form-content .field .name{
	color:#434552;
	padding-left:10px;
	position:relative;
	margin-bottom: 10rpx;

}

.form-content .field picker{
	position:absolute;
	width:100%;
	text-align:left;
}
.form-content .field picker .picker-view{
	margin-left: 3%;
}
.form-content .field picker .picker-view.placeholder{
	color:#898989;
}


.form-content .field .value{
	/*width: 550rpx*/
	background-color:#f5f5f5;
	min-height:75rpx;
	border-radius:8rpx;
	position:relative;
	display:flex;
	justify-content:space-between;
	align-items:center;
	border:1px solid #f0f0f0;

}
.form-content.disabled input,
.form-content.disabled textarea{
	/*background-color: #fafafa;*/
	color: #bababa;
}
.form-content .field input,
.form-content .field textarea{
	/*padding:0 10rpx;*/
	/*border-bottom:1px solid #f0f0f0;*/
	height:75rpx;
	padding-left:3%;
	width: 100%;
}
.form-content .field textarea{
	height: 200rpx;
	padding-top: 10rpx;

}
.form-content .field.inValid .name{
	color: #EA4834
}
.form-content .field .notice{
	color:#EA4834;
	font-size:26rpx;
	margin-left:10rpx;
	margin-top:10rpx;
}
.btn-wrapper{
	width:730rpx;
	margin:auto;
	display:flex;
	align-items:center;
	justify-content:space-between;
}
.btn-wrapper .btn{
	height:80rpx;
	line-height:80rpx;
	border-radius:10rpx;
	width:360rpx;
	text-align:center;

}
.btn-wrapper .btn.long{
	height: 80rpx;
	line-height: 80rpx;
	border-radius: 10rpx;
	width: 100%;
	text-align:center;
}
.btn-wrapper .btn.submit{
	background-color: #EA4834;
	color: white;
}
.btn-wrapper .btn.cancel{
	background-color: #e0e0e0;
	color:#898989;
	
}



/***搜索框***/
.search-box {
	font-size:28rpx;
	display:flex;
	height:100%;
	align-items:center;
	height: 100rpx;
	background-color: white
}
.search-box .back{
	color:#ccc;
	width:115rpx;
	text-align:center;

}
.search-box .search-wrapper{
	width: 530rpx;
}
.search-box .search-wrapper .search-txt{
	background-color:#f0f0f0;
	border-radius:50rpx;
	width:100%;
	padding:0 20rpx;

}