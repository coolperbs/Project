.head { z-index: 1; position: fixed; top : 0; left : 0; width: 100%; background-color: #fff; box-shadow: 0 6rpx 14rpx rgba( 0, 0, 0, 0.1 ); }
.head .create { position: absolute; padding : 10rpx 20rpx; border-radius: 10rpx; right : 30rpx; background: linear-gradient( to top, #4169E1, #6495ED); color : #fff; }

.search { padding : 10rpx 20rpx; }
.search .box { height : 60rpx; border-radius: 50rpx; border : solid 2rpx #f0f0f0; display: flex; align-items: center; }
.search .box .icon { width : 38rpx; height : 38rpx; margin : 0 10rpx; }
.search .box input { width : 10rpx; flex-grow : 1; }

.nav { background-color: #fff; z-index: 10; height : 60rpx; width : 690rpx; padding : 20rpx 30rpx 20rpx 30rpx; display: block; overflow: hidden; }
.nav .nav-list { white-space:nowrap; }
.nav .nav-list .item { position: relative; margin-left : 60rpx; height : 60rpx; line-height: 60rpx; font-size : 28rpx; display: inline-block; }
.nav .nav-list .item:first-child { margin-left : 0; }
.nav .nav-list .item.current { font-size : 32rpx; }
.nav .nav-list .item.current:after { border-radius: 8rpx; content: ''; display: block; height : 8rpx; width : 100%; background-color: #EE4000; position: absolute; bottom : 0; left : 0; }


.list { width : 660rpx; margin : 220rpx 30rpx 120rpx 30rpx; padding-left : 30rpx; padding-bottom : 100rpx; }
.list .item { border-bottom : solid 1px #f0f0f0; padding-bottom : 40rpx; }
.list .item:last-child { border-bottom : 0; }
.list .item .title { font-size : 36rpx; margin : 40rpx 0 20rpx 0; position: relative; display: flex; justify-content: space-between; align-items: center; }
.list .item .title:before { display: block; height : 30rpx; width : 8rpx; border-radius: 8rpx; content : ''; background-color: #EE4000; position: absolute; left: -30rpx; top: 50%; margin-top: -15rpx; }
.list .item.over .title:before { background-color: #999; }
.list .item .title.green:before{ background-color: #ccc; }
.list .item.hight .title:before { background-color: #ee4000; }
.list .item.hight .title .status { font-size : 32rpx; font-weight : bold; color: #ee4000; }
.list .item.normal .title:before { background-color: #FFC125; }
.list .item.normal .title .status { color: #FFC125; }
.list .item .title .status { color : #999; font-size : 28rpx; }
.list .item.on .title .status { color : #EE4000; }
.list .item .title.green .status { color : #ccc; }
.list .item .title .status.green { color : #ccc; }
.list .item .sub { font-size : 24rpx; color : #999; }
.list .item .main { margin-top : 10rpx; font-size : 28rpx; }
.list .item .pics { display: flex; flex-wrap: wrap; }
.list .item .pics image { width : 140rpx; height: 140rpx; margin-left : 30rpx; border-radius: 20rpx; margin-top : 30rpx; }
.list .item .pics image:first-child { margin-left: 0; }
.list .item .act { display: flex; justify-content: flex-end; margin-top : 30rpx; }
.list .item .act .btn { padding : 10rpx 20rpx; border-radius: 10rpx; font-size : 24rpx; display: flex; justify-content: center; align-items : center; background: linear-gradient( to top, #4169E1, #6495ED); color : #fff; }
.list .item .act .btn.no { margin-right : 20rpx; background: linear-gradient( to top, #ddd, #efefef); color : #555; }

.events {}
.events .event { display: flex; padding : 10rpx 0; font-size : 28rpx; }
.events .event .key { text-align: right; width : 160rpx; }
.events .event .value { width : 500rpx; }
.events .event .value.green { color : green; }

.bottom { font-size : 32rpx; color : #EE4000; z-index: 1; position: fixed; bottom : 0; left : 0; width: 100%; height : 120rpx; background: linear-gradient( to top, #fff, rgba(255, 255, 255, 0)); display: flex; align-items: center; justify-content: center; }

.bottom .create { width : 690rpx; border-radius: 10rpx; height : 100rpx; font-size : 32rpx; display: flex; justify-content: center; align-items : center; background: linear-gradient( to top, #4169E1, #6495ED); color : #fff; }




