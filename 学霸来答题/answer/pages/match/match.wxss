Page{ background-color: #149eff; height : 100%; }

.container {  display: flex; height : 100%; flex-direction : column; justify-content : space-between; align-items : center; }

.card { position: relative; height : 840rpx; width : 670rpx; background-color: #fff; margin : 0 auto; border-radius: 10rpx; }
.card .favor { position: absolute; left : 40rpx; padding : 0 25rpx; height : 50rpx; top : 40rpx; border : solid 1px #ccc; color : #999; font-size : 26rpx; display: flex; align-items : center; justify-content : center; border-radius : 30rpx; }
.card .favor image { width : 26rpx; height : 32rpx; margin-right : 10rpx; }
.card .num { right : 40rpx; top : 40rpx; height : 50rpx; display: flex; align-items : center; position: absolute; font-size : 26rpx; color : #ccc; }
.card .num image { height : 32rpx; width : 28rpx; margin-right : 16rpx; }

.wait { display: flex; justify-content : center; align-items : center; }
.wait .info { text-align: center; margin-top : -20rpx; }
.wait .info .season { font-size : 40rpx; color : #ff8800; font-weight : bold; }
.wait .info .logo image { width : 239rpx; height : 66rpx; margin-top : 35rpx; }
.wait .info .title { font-size : 48rpx; color : #ff8800; margin-top : 35rpx; font-weight : bold; }
.wait .info .title.end { margin-top : 60rpx; }
.wait .info .text { margin : 0 44rpx; margin-top : 20rpx; font-size : 32rpx; }
.wait .info .time { font-size : 90rpx; color : #149eff; margin-top : 80rpx; }

.question { display: flex; flex-direction : column; align-items : center;  }
.question .info { position: relative; overflow: visible; margin-top : 62rpx; width : 120rpx; height : 120rpx; border-radius: 50%; background-color: #ccc; color : #fff; font-size : 60rpx; display: flex; align-items : center; justify-content : center; }
.question .info.warn { background-color: #ff8800; }
.question .info.timeup { background-color: #ff6161; font-size : 30rpx; }
.question .info.answer {}
.question .info.answer image { width : 60rpx; }
.question .info.answer .sub-count { font-weight : bold; font-size : 24rpx; position: absolute; bottom : -42rpx; color : red; }
.question .info.answer.correct { background-color: #6cd983; }
.question .info.answer.correct .sub-count { color: #6cd983; }
.question .info.answer.wron { background-color: #ff6767; }
.question .info.answer.wron .sub-count { color: #ff6767; }

.question .text { font-size : 36rpx; margin : 77rpx 62rpx 0 62rpx; text-align: center; }
.question .options { margin-top : 70rpx; }
.question .options .cell { overflow: hidden; position: relative; font-size : 28rpx; border-radius: 60rpx; line-height: 100rpx; margin-bottom : 20rpx; padding : 0 45rpx; width : 460rpx; height : 100rpx; border : solid 4rpx #e4e4e4; }
.question .options .cell.selected { color : #fff; background-color: #1493ff; }
.question .options .cell.correct { background-color: #6cd983; color : #fff; }
.question .options .cell.wron { background-color: #ff6767; color : #fff; }
.question .options .cell .txt { z-index: 1; position: relative; }
.question .options .cell .col { width : 50%; height : 100%; background-color : #ccc; position: absolute; left : 0; top : 0;  }

.container .comments { font-size : 24rpx; height : 1rpx; flex-grow : 1; margin-top : 25rpx; margin-bottom : 110rpx; width : 650rpx; }
.container .comments .text { display: flex; color : #fff; text-shadow : 0 6rpx 6rpx rgba( 0, 0, 0, 0.28 ); margin-bottom : 20rpx; }
.container .comments .text .name { color : #ffe28b; margin-right : 15rpx; }
.container .comments .text .word { width : 1rpx; flex-grow : 1; }


.toolbar { height : 70rpx; left : 40rpx; position: fixed; bottom : 30rpx; width : 670rpx; display: flex; justify-content : space-between; align-items : center; }
.toolbar input { font-size : 30rpx; width : 510rpx; height : 70rpx; line-height: 70rpx; padding : 0 30rpx; color : #a6c5e6; background-color: #107ecc; border-radius: 40rpx; }
.toolbar .btn { position: relative; width : 70rpx; height : 70rpx; border-radius: 50%; background-color: #107ecc; }
.toolbar .btn:after { content : ''; height : 14rpx; width : 14rpx; background-color: #a6c5e6; position: absolute; border-radius: 50%; left : 32rpx; top : 32rpx; }
.toolbar .btn:before { width : 28rpx; height : 28rpx; content: ''; background-color: transparent; position: absolute; left : 17rpx; top : 17rpx; border-radius: 50%; border : solid 6rpx #a6c5e6; }


.pop-area { position: fixed; top : 0; left : 0; width : 100%; height : 100%; background-color: rgba( 0, 0, 0, 0.5 ); display: flex; align-items : center; justify-content : center; z-index : 100; }
.pop-area .pop { margin-top : -60rpx; border-radius : 10rpx; background-color: #fff; width : 670rpx; height : 700rpx; display: flex; flex-direction : column; justify-content : space-between; align-items : center; position : relative; }
.pop-area .pop .cross { width : 28rpx; height : 28rpx; position: absolute; right : 35rpx; top : 45rpx; }
.pop-area .pop .info { display: flex; flex-direction : column; justify-content : center; align-items : center; }
.pop-area .pop .icon { margin-top : 55rpx; height : 90rpx; width : 88rpx;  }
.pop-area .pop .title { font-size : 46rpx; color : #ff8800; margin-top : 35rpx; }
.pop-area .pop .desc { font-size : 46rpx; margin : 42rpx 100rpx 0 100rpx; text-align: center; }
.pop-area .pop .act { height : 10rpx; flex-grow : 1; display: flex; align-items : center; }
.pop-area .pop .btn { margin-top : -40rpx; border-radius : 60rpx; height : 100rpx; width : 260rpx; line-height: 100rpx; text-align: center; color : #fff; background-color: #149eff; }

.pop-area.allright .pop .info .icon { width : 127rpx; height : 81rpx; }
.pop-area.allright .pop .info .icon.favor { width : 88rpx; height : 90rpx;  }
.pop-area.allright .pop .title { font-size : 44rpx; color : #000;  }
.pop-area.allright .pop .desc,
.pop-area.allright .pop .sub-desc { font-size : 32rpx; }
.pop-area.allright .pop .balance { display: inline; color : #fa5452; }
.pop-area.allright .pop .share-icon { margin-bottom : 25rpx; display: block; width : 88rpx; height : 88rpx; }
.pop-area.allright .pop .act { margin-top : 66rpx; position: relative; }
.pop-area.allright .pop .share-btn { font-size : 24rpx; background-color: transparent; color : #95a3a7; text-align: center; border:none; position: relative; }
.pop-area.allright .pop .share-btn button { width : 100%; height : 100%; left : 0; top : 0; position: absolute; opacity: 0; }
.pop-area.allright .pop .share-msg { width : 150rpx; position: absolute; top : 0; left : 50%; margin-left : -75rpx; text-align: center; font-size : 24rpx; color : #95a3a7; z-index : 20; background-color: #fff; }
.pop-area.allright .pop .line { content : ''; border-bottom : solid 1px #95a3a7; width : 476rpx; margin-left : -238rpx; position: absolute; left : 50%; top : 16rpx; z-index: 1;  }














