/* pages/signUpC/signUpC.wxss */

.tab-box {
    margin: 0 30rpx;
}

.tab-box .tab-item {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 40rpx 0;
    border-bottom: 1rpx solid #eee;
}
.tab-box .tab-item .tab-item-right{
    margin-left: auto;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    width: 70%;
}
.tab-box .tab-item .tab-item-right .place-text{
font-size: 26rpx;
    color: #666;
    text-align: right;
}
.tab-box .tab-item .tab-item-right .tab-item-input{
    margin-right: 30rpx;
    text-align: right;
    font-size: 26rpx;
    color: #666;
    width: 100%;
}
.tab-box .tab-item .tab-item-label {
    font-size: 30rpx;
    color: #1a1b1e;
}

.tab-box .tab-item .tab-item-desc {
    font-size: 26rpx;
    color: #666;
    max-width: 280rpx;
}


.tab-box .tab-item .arrow-icon {
    width: 40rpx;
    height: 40rpx;
    margin-left: 10rpx;
}

.sign-up-btn {
    height: 90rpx;
    background: #36a3fb;
    color: white;
    border-radius: 45rpx;
    position: absolute;
    left: 45rpx;
    right: 45rpx;
    bottom: 40rpx;
}
